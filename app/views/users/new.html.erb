<div class="container">
  <div class="page-header">
    <h1>Sign Up</h1>
  </div>
  <%= form_for (@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.submit %>
  <% end %>
</div>

